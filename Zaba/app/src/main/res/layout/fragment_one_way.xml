        <!--android:layout_centerHorizontal="true" />-->





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departing From:"
        android:id="@+id/departingFromText"
        android:layout_marginTop="210dp"
        android:layout_below="@+id/Logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <AutoCompleteTextView
        android:id="@+id/departingFrom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/departingFromText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/flyingToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flying To:"
        android:layout_below="@+id/departingFrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <AutoCompleteTextView
        android:id="@+id/flyingTo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/flyingToTextView"
        android:layout_alignRight="@+id/oneWayButton"
        android:layout_alignEnd="@+id/oneWayButton"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/departDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depart Date:"
        android:layout_below="@+id/flyingTo"
        android:layout_toRightOf="@+id/Logo"
        android:layout_toEndOf="@+id/Logo"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/departDateEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/departDateTextView"
        android:layout_alignRight="@+id/oneWayButton"
        android:layout_alignEnd="@+id/oneWayButton"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/passengersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passengers:"
        android:layout_below="@+id/departDateEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/passengersEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="1 Travel"
        android:layout_below="@+id/passengersNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:textColor="#878686"
        android:layout_marginTop="5dp"
        android:singleLine="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/departDateEditText"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
