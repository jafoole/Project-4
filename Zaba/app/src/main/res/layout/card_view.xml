<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/flightTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:25 PM - 4:15PM"
                />

            <TextView
                android:id="@+id/departFlightRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LGA - ABV"
                android:layout_below="@id/flightTimeTextView"/>

            <TextView
                android:id="@+id/departFlightRouteHoursTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21h 50m"
                android:layout_alignTop="@+id/flightTimeTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/returnFlightRouteTextView"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20 PM - 7:47 PM"
                android:layout_below="@id/departFlightRoute"/>

            <TextView
                android:id="@+id/returnFlightRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABV - JFK"
                android:layout_below="@id/returnFlightRouteTextView"/>

            <TextView
                android:id="@+id/returnFlightRouteHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22h 27m"

                android:layout_alignTop="@+id/returnFlightRouteTextView"
                android:layout_alignLeft="@+id/departFlightRouteHoursTextView"
                android:layout_alignStart="@+id/departFlightRouteHoursTextView" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 1050"
                android:layout_below="@id/returnFlightRoute"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>
        
        
    </android.support.v7.widget.CardView>

</RelativeLayout>