<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="20dp"
    android:background="#ebebeb">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardUseCompatPadding="true"
        android:elevation="@dimen/cardview_default_elevation"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/outboundDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:25 PM"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/outboundArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:25 PM"
                android:layout_above="@+id/outboundDestination"
                android:layout_toRightOf="@+id/dashSeparator3"
                android:layout_toEndOf="@+id/dashSeparator3"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/outboundOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LGA"
                android:layout_below="@id/outboundDepartureTime"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/dashSeparator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  -  "
                android:layout_below="@+id/outboundDepartureTime"
                android:layout_toRightOf="@+id/outboundOrigin"
                android:layout_toEndOf="@+id/outboundOrigin"
                android:textSize="15sp"/>



            <TextView
                android:id="@+id/outboundDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JFK"
                android:layout_alignTop="@+id/dashSeparator2"
                android:layout_toRightOf="@+id/dashSeparator2"
                android:layout_toEndOf="@+id/dashSeparator2"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/outboundDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21h 50m"
                android:layout_alignTop="@+id/outboundDepartureTime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/dashSeparator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  -  "
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/outboundDepartureTime"
                android:layout_toEndOf="@+id/outboundDepartureTime"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/saleTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="$ 1050"
                android:textSize="17sp"
                android:layout_below="@id/outboundOrigin" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>